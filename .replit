entrypoint = "index.js"
modules = ["nodejs-20"]
hidden = [".config", "package-lock.json"]

[gitHubImport]
requiredFiles = [".replit", "replit.nix", "package.json", "package-lock.json"]

[nix]
channel = "stable-24_05"

[unitTest]
language = "nodejs"

[deployment]
run = ["node", "index.js"]
deploymentTarget = "cloudrun"
ignorePorts = false

[workflows]
runButton = "Expo Start"

[[workflows.workflow]]
name = "Expo Start Tunnel"
mode = "sequential"
author = 30238722

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx expo start --tunnel"

[[workflows.workflow]]
name = "Expo Start"
mode = "sequential"
author = 30238722

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx expo start"

[[ports]]
localPort = 8081
externalPort = 80
